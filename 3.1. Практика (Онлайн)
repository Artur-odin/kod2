while True:
    print("Введите параметры автомобиля по шаблону")
    string = input("LADA 2010г 205000км 450000руб ").strip().split()
    try:
        print(f"Продается автомобиль\nМарка: {string[0]}\nГод выпуска: {string[1]}\nПробег: {string[2]}\nЦена: {string[3]}")
        break
    except:
        print("Введены не корректные данные")
#KIA 2017г 150000км 1100000руб